{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "android",
            "request": "launch",
            "name": "Android launch",
            "appSrcRoot": "${workspaceRoot}/app/src/main",
            "preLaunchTask": "run gradle",
            "apkFile": "${workspaceRoot}/app/build/outputs/apk/free/debug/app-free-debug.apk",
            "adbPort": 5037,
            "autoStartADB": true,
            //"manifestFile": "${workspaceRoot}/app/src/main/AndroidManifest.xml",
            "pmInstallArgs": ["-r"],
            "amStartArgs": [
                "-D",
                "--activity-brought-to-front",
                "-a android.intent.action.MAIN",
                "-c android.intent.category.LAUNCHER",
                "-n package.name/launch.activity"
            ],
           // "launchActivity": "com.maxleafsoft.BGBU.MainActivity",
            "trace": true
        },
        {
            "type": "android",
            "request": "attach",
            "name": "Android attach",
            "appSrcRoot": "${workspaceRoot}/app/src/main",
            "adbPort": 5037,
            "processId": "${command:PickAndroidProcess}"
        }
    ]
}